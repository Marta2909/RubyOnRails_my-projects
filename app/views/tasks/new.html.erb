<%= flash[:notice] %>
<%= form_for @task do |f| %>
  <div class='form-group'>
    <%= f.label :task %>
    <%= f.text_field :name, class: 'form-control', id: 'taskname' %>
  </div>
  <div class='form-group'>
    <%= f.label :priority %>
    <%= f.select :priority, [ 'important', 'common' ], class: 'form-control', prompt: 'Select One' %>
  </div>
  <div class='form-group'>
    <%= f.label :deadline %>
    <%= f.text_field :deadline, class: 'datepicker form-control', placeholder: 'dd-mm-rrrr' %>
  </div>
  <%= f.submit :submit %>

  <script type="text/javascript">
    $(document).ready(function(){
      $('.datepicker').datepicker({
        format: "dd/mm/yyyy"
      });
    });
  </script>
<% end %>
